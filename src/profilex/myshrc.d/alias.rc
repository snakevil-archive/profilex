# {{{ Highlights cmds' response.

which egrep > /dev/null && alias egrep='egrep --color=auto'
which fgrep > /dev/null && alias fgrep='fgrep --color=auto'
alias grep='grep --color=auto'

case `uname -s` in
  Linux )
    platform="linux"
    ;;
  *[Bb][Ss][Dd] )
    platform="bsd"
    ;;
  Darwin )
    platform="bsd"
    ;;
  * )
    platform="unknown"
    ;;
esac
[ 0 -lt `ls --version 2> /dev/null | grep GNU | wc -l` ] \
  && platform="linux"

if [ "bsd" = "${platform}" ]; then
  alias ls='ls -FG'
elif [ "linux" = "${platform}" ]; then
  if [ "cygwin" = "${TERM}" ]; then
    alias ls='ls -F --color=auto --show-control-chars'
  else
    alias ls='ls -F --color=auto'
  fi
fi
unset platform

which colordiff > /dev/null && alias diff='colordiff -u' \
  || alias diff='diff -u'

# }}}

# {{{ Formats cmds' response for human-reading.

which df > /dev/null && alias df='df -Th'
which du > /dev/null && alias du='du -ch --time'
which free > /dev/null && alias free='free -m'

alias la='ll -A'
alias ll='ls -hl'

alias more='less'

which ps > /dev/null \
  && alias ps='ps -ewwo"user,tty,pid,ppid,state,etime,pcpu,pmem,time,args"'

# }}}

# {{{ Ensures operations' security for file-system.

alias cp='cp -ai'

alias mkdir='mkdir -p'

alias mv='mv -i'
alias rm='rm -i'

# }}}

# {{{ Shortcuts for habits of cmds.

which git > /dev/null && alias g='git'

which sudo > /dev/null && alias su='sudo -s'

which vim > /dev/null && alias vi='vim'
alias v='vi'

# }}}

# {{{ Declares extra aliases for common tasks.

USERx=$USER
[ -z "${SUDO_USER}" ] || USERx=$SUDO_USER
GROUPx=`id -gn "${USERx}"`
alias own="chown -cRh ${USERx}:${GROUPx}"
unset USERx
unset GROUPx

# }}}

# {{{ Loads custom extra aliases.

if [ -r "${HOME}/.aliasx" ]
then
  . "${HOME}/.aliasx"
fi

if [ -r "${HOME}/.aliasrc" ]
then
  . "${HOME}/.aliasrc"
fi

# }}}

