profilex() {
  'which' awk stat sed dirname less &> /dev/null || return 1
  local readme=`'stat' -c'%N' "${_PROFILEX}" \
    | 'awk' 'BEGIN{FS="'"'"' -> \`"}{print $2}' \
    | 'sed' -e's/'"'"'//'`
  readme=`'dirname' "${readme}"`
  readme="${readme}/README"
  [ -f "${readme}" ] || return 2
  less "${readme}"
}

