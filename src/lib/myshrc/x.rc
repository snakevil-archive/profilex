# {{{ Implies `xcd'.

xcd() {
  local path
  local code
  path=`'xquery' "$@"`
  code=$?

  [ 0 -ne $code ] && return $code

  cd "${path}"

  return 0
}

# }}}

# {{{ Supports bash-completion.

_x() {
  COMPREPLY=()

  [ "$1" = "$3" ] || return 0

  local list=`'xls' 2> /dev/null | 'awk' '"Total"!=$1{print $1}'`
  local cur="$2"

  [ "xcd" = "$1" -o "xrm" = "$1" ] && {
    [ '-' = "${cur:0:1}" ] || {
      COMPREPLY=( $( compgen -W "${list}" -- "${cur}" ) )
      return 0
    }
  }

  COMPREPLY=( $( compgen -W '--help' -- "${cur}" ) )
  return 0
}

complete -F _x x xad xcd xls xrm

# }}}

